<?xml version="1.0" encoding="UTF-8"?>
<sdm xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="sdm.xsd">

    <dto-class name="Downloads" ref="downloads"/>

    <dto-class name="ReleaseData" ref="releases"/>

    <dao-class name="DownloadsDao">

        <crud dto="Downloads" table="downloads">
            <create method="create_download"/>
            <update method="update_download"/>
        </crud>

        <query-dto-list method="find_downloads(r_id, d_date)" dto="Downloads" ref="downloads(r_id, d_date)"/>

        <query-dto-list method="get_downloads_ordered_by_date_asc(int r_id, str date_begin, str date_end)" dto="Downloads"
                        ref="get_downloads_ordered_by_date_asc.sql"/>

    </dao-class>

    <dao-class name="ReleasesDao">

        <crud dto="ReleaseData" table="releases">
            <create method="create_release"/>
        </crud>

        <query-dto-list method="find_by_name(r_name)" dto="ReleaseData" ref="find_release_by_name.sql"/>

    </dao-class>

</sdm>
