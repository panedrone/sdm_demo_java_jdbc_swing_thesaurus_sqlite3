<?xml version="1.0" encoding="UTF-8"?>
<dao-class xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="dao.xsd">

    <crud dto="Downloads" table="downloads">
        <create method="create_download"/>
        <update method="update_download"/>
    </crud>

    <query-dto-list method="find_downloads(r_id, d_date)" dto="Downloads" ref="downloads(r_id, d_date)"/>

    <query-dto-list method="get_downloads_ordered_by_date_asc(int r_id, str start_date, str end_date)" dto="Downloads"
                    ref="get_downloads_ordered_by_date_asc.sql"/>

</dao-class>